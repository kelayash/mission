#remove file 

hadoop fs -rm filename
	ex:hadoop fs -rm word.txt

#to put files into hdfs

hadoop fs -put filename
	ex:hadoop fs -put word.txt

#To  Remove Directory

hadoop fs -rmdir directroyname(it is directory)
	ex:hadoop fs -rmdir MtechDS

#To make directory

hadoop fs -mkdir directroyname(it is directory)
	ex:hadoop fs -mkdir Mtech

#To run jar file(Examples.jar)

hadoop jar /usr/lib/hadoop-0.20-mapreduce/hadoop-examples.jar

#word count

hadoop jar /usr/lib/hadoop-0.20-mapreduce/hadoop-examples.jar wordcount word1.txt(input file) wordcount(output file)

#To View Results

hadoop fs -ls wordcount(the output file)
(two files will there)
hadoop fs -get wordcount/part-r-00000 myresults
more myresults

#word median

hadoop jar /usr/lib/hadoop-0.20-mapreduce/hadoop-examples.jar wordmedian word1.txt(input file) wordcount(output file)

#To Unzip 

unzip -o big-data-2.zip

